# OWL Evaluation Framework - Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Database Configuration
DATABASE_URL="postgresql://owl_user:owl_password@localhost:5432/evaluation?sslmode=disable"

# Authentication (Stack Auth) - OPTIONAL for development
# Get these from https://app.stack-auth.com after creating a project
NEXT_PUBLIC_STACK_PROJECT_ID=""
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=""
STACK_SECRET_SERVER_KEY=""

# Prolific Integration (Optional)
PROLIFIC_API_TOKEN=""

# Storage Configuration
DATA_DIR="./data"
VIDEO_UPLOAD_DIR="./uploads/videos"

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=auto
AWS_ENDPOINT_URL_IAM=https://fly.iam.storage.tigris.dev/
AWS_ENDPOINT_URL_S3=https://t3.storage.dev/
AWS_S3_BUCKET=""
TIGRIS_BUCKET_NAME=

# Evaluation Settings
TARGET_EVALUATIONS_PER_COMPARISON=5
MAX_VIDEO_SIZE_MB=100
SUPPORTED_VIDEO_FORMATS="mp4,webm,mov"

# Development Settings
DEBUG_MODE="false"
LOG_LEVEL="info"
